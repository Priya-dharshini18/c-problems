#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    int n;
    float sum=1;
    long long a=0;
    scanf("%d",&n);
    int arr[n];
    for(int i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
        sum*=arr[i];
        a+=arr[i];
    }
    float t=(float)a/n;
    float tt=(int)(t*1000.0)/1000.0;
    printf("Product of the array:%.2f\n",sum);
    printf("Mean of the array:%.3f",tt);
    
    return 0;
}
