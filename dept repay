#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int a,r,y;
    scanf("%d\n%d\n%d",&a,&r,&y);
    float e,d,f,i;
    f=(a*r*y)/100;
    e=a+f;
    d=0.02*f;
    i=e-d;
    printf("%.2f\n%.2f\n%.2f\n%.2f",f,e,d,i);
    
    return 0;
}
